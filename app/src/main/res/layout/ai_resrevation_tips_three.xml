<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_marginTop="@dimen/dimen25dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <LinearLayout
            android:id="@+id/go_back"
            android:layout_width="@dimen/dimen50dp"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/left_img"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"
                android:src="@mipmap/icon_back" />
        </LinearLayout>
        <TextView
            android:textColor="#333333"
            android:textSize="@dimen/dp_17"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提示"/>
    </RelativeLayout>
    <View style="@style/Base_line_Horizontal"/>
    <TextView
        android:lineSpacingExtra="@dimen/dimen5dp"
        android:gravity="center"
        android:textSize="@dimen/dimen15dp"
        android:textColor="@color/black_333"
        android:layout_marginRight="@dimen/dimen80dp"
        android:layout_marginLeft="@dimen/dimen80dp"
        android:layout_marginTop="@dimen/dimen70dp"
        android:layout_marginBottom="@dimen/dimen20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您已完成所有月台的装卸货操作， 感谢您使用预约月台"/>

    <Button
        android:id="@+id/btn_tipsThree_ok"
        android:layout_marginTop="@dimen/dimen70dp"
        android:gravity="center"
        android:textSize="@dimen/dimen15dp"
        android:textColor="@color/white"
        android:text="完成"
        android:background="@drawable/yt_button_1"
        android:layout_marginLeft="@dimen/dimen65dp"
        android:layout_marginRight="@dimen/dimen65dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen44dp"/>
</LinearLayout>