<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <widget.CommonToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_name="意见反馈" />

    <View style="@style/Base_line_Horizontal" />

    <com.github.jdsjlzx.recyclerview.LRecyclerView
        android:layout_weight="1"
        android:id="@+id/lv_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:descendantFocusability="blocksDescendants"
        android:layout_marginBottom="@dimen/dp_5"
        />

    <Button
        android:id="@+id/btn_complaint"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="40.5dp"
        android:layout_marginRight="40.5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/yt_button"
        android:text="我有问题"
        android:textColor="#fffafaff"
        android:textSize="15sp" />

    <TextView
        android:layout_marginTop="@dimen/dimen10dp"
        android:gravity="center"
        android:textColor="#cccccc"
        android:textSize="@dimen/dp_13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="服务电话022-88356330"/>

    <LinearLayout
        android:layout_marginBottom="@dimen/dimen10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_confirm"
            android:textColor="@color/color_theme"
            android:textSize="@dimen/dimen12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易规则"/>
        <View
            android:layout_marginLeft="@dimen/dimen15dp"
            android:layout_marginRight="@dimen/dimen15dp"
            android:background="#ff5799e7"
            android:layout_width="@dimen/dimen1dp"
            android:layout_height="@dimen/dimen10dp" />
        <TextView
            android:id="@+id/tv_privacy"
            android:textSize="@dimen/dimen12dp"
            android:textColor="@color/color_theme"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:text="隐私政策"/>
    </LinearLayout>
</LinearLayout>