<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tv_ruleText"
        android:paddingRight="@dimen/dimen15dp"
        android:paddingLeft="@dimen/dimen15dp"
        android:gravity="center_vertical"
        android:textColor="@color/black_333"
        android:textSize="@dimen/dimen15dp"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen35dp"
        android:background="@color/white"/>

    <LinearLayout
        android:background="@color/color_f6"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen45dp">

        <RadioGroup
            android:layout_weight="1"
            android:id="@+id/rg_select_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <RadioButton
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen15dp"
                android:id="@+id/tab_yes"
                android:layout_width="@dimen/dimen80dp"
                android:layout_height="@dimen/dimen25dp"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="是"
                android:background="@drawable/yt_button_select"
                android:textColor="@drawable/yt_build_textcolor_selecter"
                android:textSize="@dimen/dimen12dp" />

            <RadioButton
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen50dp"
                android:id="@+id/tab_no"
                android:layout_width="@dimen/dimen80dp"
                android:layout_height="@dimen/dimen25dp"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="否"
                android:background="@drawable/yt_button_select"
                android:textColor="@drawable/yt_build_textcolor_selecter"
                android:textSize="@dimen/dimen12dp" />
        </RadioGroup>

        <TextView
            android:id="@+id/tv_upload"
            android:background="@drawable/yt_button_3"
            android:paddingRight="@dimen/dimen5dp"
            android:paddingLeft="@dimen/dimen5dp"
            android:drawableLeft="@drawable/yt_sctp"
            android:gravity="center"
            android:textColor="@color/color_theme"
            android:text="上传图片"
            android:layout_marginRight="@dimen/dimen15dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen25dp" />
    </LinearLayout>

</LinearLayout>