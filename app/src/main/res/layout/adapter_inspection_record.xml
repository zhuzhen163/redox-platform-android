<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <View style="@style/Base_line_Horizontal_10" />

    <LinearLayout
        android:background="@color/white"
        android:paddingRight="@dimen/dimen15dp"
        android:paddingTop="@dimen/dimen5dp"
        android:paddingBottom="@dimen/dimen5dp"
        android:paddingLeft="@dimen/dimen15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_reserveCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约码："
                android:textSize="@dimen/dimen12dp"
                android:textColor="@color/black_333"/>
            <TextView
                android:id="@+id/tv_stutas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/dimen12dp"
                android:textColor="@color/black_333"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_driver"
            android:layout_marginTop="@dimen/dimen5dp"
            android:textColor="@color/black_333"
            android:textSize="@dimen/dimen12dp"
            android:layout_width="@dimen/dimen170dp"
            android:layout_height="wrap_content"
            android:text="司机："/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dimen5dp"
                android:id="@+id/tv_carCode"
                android:textColor="@color/black_333"
                android:textSize="@dimen/dimen12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车牌号："/>
            <TextView
                android:id="@+id/tv_time"
                android:layout_marginTop="@dimen/dimen5dp"
                android:textColor="#CCCCCC"
                android:textSize="@dimen/dimen12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>