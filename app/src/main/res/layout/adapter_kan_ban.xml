<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dimen170dp"
    android:layout_height="@dimen/dimen190dp"
    android:background="#FDF5E3"
    android:layout_marginLeft="@dimen/dimen10dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_marginTop="@dimen/dimen10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_yt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="OD01"
            android:textStyle="bold"
            android:textColor="@color/black_333"
            android:textSize="12dp"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/dimen30dp"
            android:layout_marginRight="@dimen/dimen30dp"
            />
        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/iv_join"
            android:padding="@dimen/dimen5dp"
            android:src="@drawable/yt_warehouse_carstate"
            android:layout_width="@dimen/dimen30dp"
            android:layout_height="@dimen/dimen20dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginRight="@dimen/dimen10dp"
        android:layout_marginTop="@dimen/dimen10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="@dimen/dimen40dp"
            android:layout_height="wrap_content"
            android:text="序号"
            android:gravity="center_horizontal"
            android:textSize="@dimen/dimen12dp"
            android:textColor="#CCCCCC"/>
        <TextView
            android:gravity="right"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车辆状态"
            android:textSize="@dimen/dimen12dp"
            android:textColor="#CCCCCC"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_weight="1"
        android:id="@+id/recycleList"
        android:paddingTop="@dimen/dimen10dp"
        android:paddingBottom="@dimen/dimen10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        />

</LinearLayout>