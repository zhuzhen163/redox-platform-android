<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen250dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/dialog_corner_yt"
        android:gravity="center"
        android:text="提示"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_corner_b"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_content"
            android:textColor="@color/black_333"
            android:textSize="12sp"
            android:text="您已完成提货/卸货操作，您停车时 长为46分钟,请缴纳停车费"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen15dp"
            android:layout_marginBottom="@dimen/dimen15dp"
            android:layout_marginRight="@dimen/dimen15dp"
            android:layout_marginLeft="@dimen/dimen15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="@dimen/dimen20dp"
            android:textColor="@color/black_333"
            android:id="@+id/tv_payNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"/>

        <TextView
            android:layout_marginTop="@dimen/dimen15dp"
            android:layout_marginBottom="@dimen/dimen15dp"
            android:id="@+id/tv_sure"
            android:background="@drawable/yt_button_1"
            android:layout_width="@dimen/dimen120dp"
            android:layout_height="@dimen/dimen30dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:text="去缴费"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen14dp" />
    </LinearLayout>
</LinearLayout>