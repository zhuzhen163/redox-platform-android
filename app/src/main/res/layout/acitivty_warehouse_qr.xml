<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <widget.CommonToolbar
        android:id="@+id/ctb_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_name="仓库" />

    <View style="@style/Base_line_Horizontal"/>
    
    <android.support.v7.widget.CardView
        android:layout_marginLeft="@dimen/dimen15dp"
        android:layout_marginRight="@dimen/dimen15dp"
        android:layout_marginBottom="@dimen/dimen170dp"
        android:layout_marginTop="@dimen/dimen15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginRight="@dimen/dimen40dp"
            android:layout_marginLeft="@dimen/dimen40dp"
            android:layout_marginTop="@dimen/dimen5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textSize="@dimen/dimen12dp"
                    android:drawablePadding="@dimen/dimen5dp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="仓库名称："
                    android:textColor="@color/color_black_333333"
                    android:drawableLeft="@drawable/yt_cang"/>
                <TextView
                    android:textSize="@dimen/dimen12dp"
                    android:id="@+id/tv_qr_warehouseName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_666"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dimen20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textSize="@dimen/dimen13dp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="仓 库 码："
                    android:textColor="@color/color_black_333333"
                    />
                <TextView
                    android:textSize="@dimen/dimen13dp"
                    android:id="@+id/tv_qr_warehouseCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_666"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dimen20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textSize="@dimen/dimen12dp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="仓库地址："
                    android:textColor="@color/color_black_333333"
                    />
                <TextView
                    android:textSize="@dimen/dimen12dp"
                    android:id="@+id/tv_qr_warehouseAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_666"
                    android:text=""/>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_qr_code"
                android:layout_marginTop="@dimen/dimen30dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen240dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    
</LinearLayout>