<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@drawable/corner_waybill_bg"
    android:elevation="10dp"
    >

    <RelativeLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_32"
        android:background="@drawable/corner_waybill_adapter">

        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/tv_que"
            android:textColor="@color/black_333"
            android:textSize="@dimen/dp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_time"
            android:textColor="@color/black_333"
            android:textSize="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_driver_content"
        android:textColor="@color/black_333"
        android:textSize="@dimen/dp_12"
        android:text=""
        android:padding="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <RelativeLayout
        android:id="@+id/rl_pt"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@drawable/corner_complaint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_pt_content"
            android:paddingRight="@dimen/dp_8"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_8"
            android:text="官方回复："
            android:textSize="@dimen/dp_11"
            android:textColor="@color/black_333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_pt_time"
            android:padding="@dimen/dp_5"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_pt_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_10"
            android:textColor="@color/black_333"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_pt"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_yes"
                android:background="@drawable/icon_yes_1"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25" />
            <TextView
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_gravity="bottom"
                android:textSize="@dimen/dp_12"
                android:textColor="#1AC47C"
                android:text="满意"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_no"
                android:layout_marginLeft="@dimen/dp_25"
                android:background="@drawable/icon_no_1"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25" />
            <TextView
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_gravity="bottom"
                android:textSize="@dimen/dp_12"
                android:textColor="#FF625E"
                android:text="不满意"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_status"
            android:background="#FF625E"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:text="处理中"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_12"
            android:layout_width="@dimen/dp_78"
            android:layout_height="@dimen/dp_25" />
    </RelativeLayout>

</LinearLayout>