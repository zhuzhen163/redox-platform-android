<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f6"
    android:orientation="vertical">

    <widget.CommonToolbar
        android:id="@+id/ctb_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_name="身份认证" />

    <View style="@style/Base_line_Horizontal_10"/>

    <LinearLayout
        android:paddingTop="@dimen/dimen10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <View
            android:background="@color/colorText"
            android:layout_width="@dimen/dimen4dp"
            android:layout_height="@dimen/dimen15dp"
            android:layout_marginLeft="@dimen/dimen15dp"/>
        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:text="请上传下列图片:"
            android:textSize="@dimen/dimen15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_333"/>
    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_driverLicense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen15dp"
            android:layout_marginRight="@dimen/dimen10dp"
            android:layout_marginTop="@dimen/dimen10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <view.InfoView
                android:id="@+id/iv_driverLicense"
                android:layout_width="@dimen/dimen150dp"
                android:layout_height="@dimen/dimen100dp"
                app:info_txt="点击上传"
                app:info_txt_color="@color/color_theme"
                app:info_img_bg="@mipmap/icon_jsz" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:text="驾驶证"
                android:textColor="@color/black_333"
                android:textSize="@dimen/dimen13dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen10dp"
            android:layout_marginRight="@dimen/dimen15dp"
            android:layout_marginTop="@dimen/dimen10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <view.InfoView
                android:id="@+id/iv_license"
                android:layout_width="@dimen/dimen150dp"
                android:layout_height="@dimen/dimen100dp"
                app:info_txt="点击上传"
                app:info_img_bg="@mipmap/icon_xsz" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:text="行驶证"
                android:textColor="@color/black_333"
                android:textSize="@dimen/dimen13dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_userName"
        android:paddingRight="@dimen/dimen15dp"
        android:paddingLeft="@dimen/dimen15dp"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dimen10dp"
        android:paddingBottom="@dimen/dimen5dp"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="@dimen/dimen60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="姓名："
            android:textColor="@color/black_333"
            android:textSize="@dimen/dimen14dp" />

        <EditText
            android:paddingRight="@dimen/dimen10dp"
            android:layout_marginLeft="@dimen/dimen10dp"
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/yt_info_auth_bg"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:hint="上传驾驶证后自动识别"
            android:textColor="@color/black_333"
            android:textColorHint="@color/black_999"
            android:textSize="@dimen/dimen14dp" />
    </LinearLayout>
    <LinearLayout
        android:paddingRight="@dimen/dimen15dp"
        android:paddingLeft="@dimen/dimen15dp"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dimen5dp"
        android:paddingBottom="@dimen/dimen10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="@dimen/dimen60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="车牌号："
            android:textColor="@color/black_333"
            android:textSize="@dimen/dimen14dp" />

        <EditText
            android:paddingRight="@dimen/dimen10dp"
            android:layout_marginLeft="@dimen/dimen10dp"
            android:id="@+id/et_carCode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/yt_info_auth_bg"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:hint="上传行驶证后自动识别"
            android:textColor="@color/black_333"
            android:textColorHint="@color/black_999"
            android:textSize="@dimen/dimen14dp" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_changeInfo"
            android:textSize="@dimen/dimen14dp"
            android:textColor="#656565"
            android:visibility="gone"
            android:background="#EDEDED"
            android:gravity="center"
            android:text="修改认证信息"
            android:layout_marginRight="@dimen/dimen35dp"
            android:layout_width="@dimen/dimen140dp"
            android:layout_height="@dimen/dimen40dp" />
        <TextView
            android:id="@+id/tv_submit"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen14dp"
            android:background="@color/color_theme"
            android:gravity="center"
            android:text="确认"
            android:layout_width="@dimen/dimen140dp"
            android:layout_height="@dimen/dimen40dp" />
    </LinearLayout>


</LinearLayout>