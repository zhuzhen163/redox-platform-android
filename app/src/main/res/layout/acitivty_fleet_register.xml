<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <widget.CommonToolbar
        android:id="@+id/ctb_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_name="车队认证" />

    <View style="@style/Base_line_Horizontal_10"/>

    <LinearLayout
        android:paddingRight="@dimen/dimen15dp"
        android:paddingLeft="@dimen/dimen15dp"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dimen10dp"
        android:paddingBottom="@dimen/dimen5dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="*"
            android:textColor="@color/color_theme"
            android:textSize="@dimen/dimen14dp" />
        <TextView
            android:layout_width="@dimen/dimen80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="车队名称："
            android:textColor="@color/black_333"
            android:textSize="@dimen/dimen14dp" />

        <EditText
            android:paddingRight="@dimen/dimen10dp"
            android:layout_marginLeft="@dimen/dimen10dp"
            android:id="@+id/et_fleetName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/yt_info_auth_bg"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:textColor="@color/black_333"
            android:textSize="@dimen/dimen14dp" />
    </LinearLayout>
    <LinearLayout
        android:paddingRight="@dimen/dimen15dp"
        android:paddingLeft="@dimen/dimen15dp"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dimen5dp"
        android:paddingBottom="@dimen/dimen10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="*"
            android:textColor="@color/color_theme"
            android:textSize="@dimen/dimen14dp" />
        <TextView
            android:layout_width="@dimen/dimen80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="联系人："
            android:textColor="@color/black_333"
            android:textSize="@dimen/dimen14dp" />

        <EditText
            android:paddingRight="@dimen/dimen10dp"
            android:layout_marginLeft="@dimen/dimen10dp"
            android:id="@+id/et_groupContacter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/yt_info_auth_bg"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:textColor="@color/black_333"
            android:textSize="@dimen/dimen14dp" />
    </LinearLayout>

    <LinearLayout
        android:paddingTop="@dimen/dimen10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <View
            android:background="@color/colorText"
            android:layout_width="@dimen/dp_4"
            android:layout_height="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"/>
        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:text="请选择上传下列图片之一"
            android:textSize="@dimen/dimen15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_333"/>
    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen15dp"
            android:layout_marginRight="@dimen/dimen10dp"
            android:layout_marginTop="@dimen/dimen10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <view.InfoView
                android:id="@+id/iv_businessLicense"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen100dp"
                app:info_txt="点击上传"
                app:info_txt_color="@color/color_theme"
                app:info_img_bg="@mipmap/icon_yyzz" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:text="营业执照"
                android:textColor="@color/black_333"
                android:textSize="@dimen/dimen13dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen15dp"
            android:layout_marginRight="@dimen/dimen10dp"
            android:layout_marginTop="@dimen/dimen10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <view.InfoView
                android:id="@+id/iv_idCard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen100dp"
                app:info_txt="点击上传"
                app:info_img_bg="@mipmap/icon_sfz" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:text="法人身份证"
                android:textColor="@color/black_333"
                android:textSize="@dimen/dimen13dp" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_fleet_register"
        android:layout_marginTop="@dimen/dimen80dp"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen15dp"
        android:gravity="center"
        android:layout_marginRight="@dimen/dimen65dp"
        android:layout_marginLeft="@dimen/dimen65dp"
        android:text="提交"
        android:background="@drawable/yt_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen45dp" />

</LinearLayout>