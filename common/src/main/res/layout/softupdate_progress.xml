<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_20"
    android:background="@drawable/dialog_frame_round"
    android:paddingRight="@dimen/dp_20">

    <TextView
        android:id="@+id/tv_aa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center"
        android:text="正在下载..."
        android:textSize="17sp" />

    <ProgressBar
        android:id="@+id/update_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_aa"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/tv_progress1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_progress"
        android:layout_below="@+id/update_progress"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tv_progress"
        android:gravity="right"
        android:text="/"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/update_progress"
        android:layout_marginTop="10dp"
        android:text="进度:"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/ivbtn_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@null"
        android:src="@mipmap/close_common" />
</RelativeLayout>